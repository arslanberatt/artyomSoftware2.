<section class="headerSection">
    <%- include("../partials/head") %>
</section>

<body>
    <%- include('../partials/adminNav') %>
    <h1 class="mt-5 offset-1 col-10 offset-md-4 col-md-6">
        <%= title %>
    </h1>
    <div class="container mt-5  offset-1 col-10 offset-md-4 col-md-6">
            <div class="row">
                <div class="col-10 offset-1">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>İd</th>
                                <th>Başlık</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% repos.forEach(e=> { %>
                                <tr>
                                    <td>
                                        <%= e.id %>
                                    </td>
                                    <td><span style="text-decoration: none;" class="text-dark">
                                            <%= e.name %>
                                        </span></td>
                                    <td><a class="ms-2 btn btn-sm btn-success px-4"
                                            href="/admin/repolist/<%= e.id %>">Güncelle</a>
                                    </td>
                                    <td><a class="ms-2 btn btn-sm btn-danger px-4"
                                            href="/admin/repodelete/<%= e.id %>">Sil</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</body>

</html>