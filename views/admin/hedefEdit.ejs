    <%- include("../partials/head") %>
</section>

<body>
    <%- include('../partials/adminNav') %>
    <h1 class="mt-5 offset-1 col-10 offset-md-4 col-md-6">
        <%= title %>
    </h1>
    <div class="container mt-5  offset-1 col-10 offset-md-4 col-md-6">
            <div class="row">
                <div class="col">
                    <form action="" method="post">
                        <div class="row mb-3 mt-4">
                            <label for="baslik" class="col-sm-2 col-form-label">Başlık:</label>
                            <div class="col-sm-8">
                                <input type="text" value="<%= hedef.baslik %>" class="form-control" id="baslik" name="baslik">
                            </div>
                        </div>
                        <div class="row mb-3 mt-4">
                            <label for="baslik2" class="col-sm-2 col-form-label">Başlık:</label>
