                            <div class="col-1">
                                <input type="text" value="<%= hedef.done %>" class="form-control" id="done" placeholder="done" name="done">
                            </div>
                            <div class="col-1">
                                <input type="text" value="<%= hedef.ilerleme %>" class="form-control" id="ilerleme" placeholder="ilerleme" name="ilerleme">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="offset-9 col-sm-1">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
